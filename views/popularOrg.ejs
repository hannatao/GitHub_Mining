                <button type="button" class="btn btn-default" data-dismiss="modal">关闭
                </button>
              </div>
            </div>
          </div>
        </div><!-- /.modal -->

        <div class="col-md-2 radio">
          <form>
            <label><input type="radio" name="optionsRadios" value="reposScoreTotal" checked class="radioInput">项目影响力</label><br>
            <label><input type="radio" name="optionsRadios" value="public_repos" class="radioInput">开源项目数</label>
          </form>
          <input type="text" id="liType" style="display: none">
          <input type="text" id="liShowType" style="display: none">
        </div>
   </div>

